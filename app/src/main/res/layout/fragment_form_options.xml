<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services"
            android:fontFamily="@font/nunito_sans"
            android:textColor="#5B22DF"
            android:textSize="25sp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            />

        <ImageView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_lock_power_off"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:backgroundTint="#5B22DF"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <View
                    android:layout_width="2dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/div1"/>


                <LinearLayout
                    android:id="@+id/addSubscriber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/blue_back"
                    android:layout_toStartOf="@+id/div1"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/subscribe"
                        android:padding="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Subscriber"
                        android:paddingHorizontal="10dp"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:fontFamily="@font/nunito_sans"
                        android:textSize="18sp"/>




                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addBouncer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/red_back"
                    android:layout_toEndOf="@+id/div1"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:padding="20dp"
                        android:src="@drawable/responder" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Responder"
                        android:paddingHorizontal="10dp"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:fontFamily="@font/nunito_sans"
                        android:textSize="18sp"/>




                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">


                <View
                    android:layout_width="2dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/div2"/>


                <LinearLayout
                    android:id="@+id/addConfig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/yellow_back"
                    android:layout_toEndOf="@+id/div2"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/sales"
                        android:padding="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sales"
                        android:paddingHorizontal="10dp"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:fontFamily="@font/nunito_sans"
                        android:textSize="18sp"/>




                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addCustomField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/green_back"
                    android:layout_toStartOf="@+id/div2"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/custom"
                        android:padding="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Custom Field"
                        android:paddingHorizontal="10dp"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:fontFamily="@font/nunito_sans"
                        android:textSize="18sp"/>




                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/addUser"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/purple_back"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/users"
                        android:padding="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Users"
                        android:paddingHorizontal="10dp"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:fontFamily="@font/nunito_sans"
                        android:textSize="18sp"/>




                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>